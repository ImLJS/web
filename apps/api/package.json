{
	"name": "api",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile api",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"hono": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/zod": "catalog:",
		"better-auth": "catalog:",
		"zod": "catalog:",
		"@repo/api": "workspace:*",
		"@repo/auth": "workspace:*",
		"@repo/db": "workspace:*"
	},
	"devDependencies": {
		"dotenv": "catalog:",
		"typescript": "catalog:",
		"@types/bun": "^1.2.6",
		"tsdown": "catalog:",
		"@repo/tsconfig": "workspace:*"
	}
}
